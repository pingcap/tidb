{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {"@/*": ["src/*"]},
    "lib": ["es2015", "dom"],
    "newLine": "LF"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
