{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "bazel": {
    "fileMatch": [
      "\\.bzl$"
    ],
    "ignorePaths": ["(^|/)WORKSPACE(|\\.bazel)$",]
  },
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchCategories": ["bazel", "golang"],
      "groupName": "gg"
    }
  ]
}
