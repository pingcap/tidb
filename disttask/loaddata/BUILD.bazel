    name = "loaddata_test",
    timeout = "short",
    srcs = [
        "dispatcher_test.go",
        "wrapper_test.go",
    ],
    data = glob(["testdata/**"]),
    embed = [":loaddata"],
    flaky = True,
    shard_count = 4,
    deps = [
        "//br/pkg/lightning/config",
        "//br/pkg/lightning/mydump",
        "//disttask/framework/dispatcher",
        "//disttask/framework/proto",
        "//executor/importer",
