load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "testmarker_lib",
    srcs = ["walker.go"],
    importpath = "github.com/pingcap/tidb/tests/testmarker",
    visibility = ["//visibility:private"],
    deps = [
        "//tests/testmarker/pkg",
        "@in_gopkg_yaml_v2//:yaml_v2",
    ],
)

go_binary(
    name = "testmarker",
    embed = [":testmarker_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "testmarker_test",
    srcs = ["walker_test.go"],
    data = glob(["testdata/**"]),
    embed = [":testmarker_lib"],
    embedsrcs = ["testdata/marker_test_go.txt"],
    deps = [
        "//tests/testmarker/pkg",
        "@com_github_stretchr_testify//require",
    ],
)
