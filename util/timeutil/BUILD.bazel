load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "timeutil",
    srcs = ["time.go"],
    importpath = "github.com/pingcap/tidb/util/timeutil",
    visibility = ["//visibility:public"],
    deps = [
        "//util/logutil",
        "@org_uber_go_atomic//:atomic",
        "@org_uber_go_zap//:zap",
