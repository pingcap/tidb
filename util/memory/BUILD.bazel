    timeout = "short",
    srcs = [
        "bench_test.go",
        "main_test.go",
        "tracker_test.go",
    ],
    embed = [":memory"],
    flaky = True,
    deps = [
        "//errno",
        "//testkit/testsetup",
        "//util/mathutil",
        "//vendor/github.com/pingcap/tidb/parser/terror",
        "//vendor/github.com/stretchr/testify/require",
