load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "disk",
    srcs = [
        "tempDir.go",
        "tracker.go",
    ],
    importpath = "github.com/pingcap/tidb/util/disk",
    visibility = ["//visibility:public"],
    deps = [
        "//config",
        "//parser/terror",
        "//util/memory",
        "@com_github_danjacques_gofslock//fslock",
