go_test(
    name = "extsort_test",
    timeout = "short",
    srcs = [
        "external_sorter_test.go",
        "pebble_sorter_test.go",
    ],
    flaky = True,
    deps = [
        ":extsort",
        "@com_github_stretchr_testify//require",
        "@org_golang_x_exp//slices",
        "@org_golang_x_sync//errgroup",
