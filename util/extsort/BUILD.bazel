load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "extsort",
    srcs = [
        "external_sorter.go",
        "pebble_sorter.go",
    ],
    importpath = "github.com/pingcap/tidb/util/extsort",
    visibility = ["//visibility:public"],
    deps = [
        "//util/arena",
