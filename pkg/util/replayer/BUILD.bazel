load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "replayer",
    srcs = ["replayer.go"],
    importpath = "github.com/pingcap/tidb/pkg/util/replayer",
    visibility = ["//visibility:public"],
    deps = [
        "//pkg/config",
        "//pkg/util/intest",
        "//pkg/util/logutil",
