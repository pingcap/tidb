load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "model",
    srcs = [
        "artifact.go",
        "cache.go",
        "loader.go",
        "mlflow.go",
    ],
    importpath = "github.com/pingcap/tidb/pkg/util/model",
